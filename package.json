{
  "name": "sidekiq-manager",
  "displayName": "Sidekiq Manager",
  "description": "Comprehensive Sidekiq monitoring and management directly in VS Code",
  "version": "0.5.0",
  "publisher": "antarrb",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Visualization"
  ],
  "keywords": [
    "sidekiq",
    "redis",
    "ruby",
    "rails",
    "jobs",
    "queue",
    "background"
  ],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#B91C1C",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:sidekiq.connect",
    "onCommand:sidekiq.dashboard",
    "onView:sidekiqServers"
  ],
  "contributes": {
    "commands": [
      {
        "command": "sidekiq.connect",
        "title": "Connect to Server",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.dashboard",
        "title": "Open Dashboard",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.viewMetrics",
        "title": "View Custom Metrics",
        "category": "Sidekiq",
        "icon": "$(graph)"
      },
      {
        "command": "sidekiq.switchServer",
        "title": "Switch Server",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.refresh",
        "title": "Refresh",
        "category": "Sidekiq",
        "icon": "$(refresh)"
      },
      {
        "command": "sidekiq.retryJob",
        "title": "Retry Job",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.deleteJob",
        "title": "Delete Job",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.viewJobDetails",
        "title": "View Job Details",
        "category": "Sidekiq",
        "icon": "$(eye)"
      },
      {
        "command": "sidekiq.retrySelectedJobs",
        "title": "Retry Selected Jobs",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.deleteSelectedJobs",
        "title": "Delete Selected Jobs",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.clearQueue",
        "title": "Clear Queue",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.pauseQueue",
        "title": "Pause Queue",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.debug",
        "title": "Show Debug Info",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.forceRefresh",
        "title": "Force Refresh All Views",
        "category": "Sidekiq",
        "icon": "$(refresh)"
      },
      {
        "command": "sidekiq.viewServerDashboard",
        "title": "View Dashboard",
        "category": "Sidekiq",
        "icon": "$(dashboard)"
      },
      {
        "command": "sidekiq.viewCronJob",
        "title": "View Cron Job Details",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.enableCronJob",
        "title": "Enable Cron Job",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.disableCronJob",
        "title": "Disable Cron Job",
        "category": "Sidekiq"
      },
      {
        "command": "sidekiq.enqueueCronJob",
        "title": "Enqueue Cron Job Now",
        "category": "Sidekiq"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidekiq-manager",
          "title": "Sidekiq Manager",
          "icon": "resources/sidekiq.svg"
        }
      ]
    },
    "views": {
      "sidekiq-manager": [
        {
          "id": "sidekiqServers",
          "name": "Servers",
          "icon": "$(server)"
        },
        {
          "id": "sidekiqQueues",
          "name": "Queues",
          "icon": "$(list-unordered)"
        },
        {
          "id": "sidekiqWorkers",
          "name": "Workers",
          "icon": "$(pulse)"
        },
        {
          "id": "sidekiqJobs",
          "name": "Jobs",
          "icon": "$(checklist)"
        },
        {
          "id": "sidekiqCron",
          "name": "Cron Jobs",
          "icon": "$(calendar)"
        }
      ]
    },
    "configuration": {
      "title": "Sidekiq Manager",
      "properties": {
        "sidekiq.servers": {
          "type": "array",
          "default": [],
          "description": "Configured Sidekiq servers"
        },
        "sidekiq.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Auto-refresh interval in seconds (minimum 5)"
        },
        "sidekiq.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "default": "auto",
          "description": "Dashboard theme"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "sidekiq.refresh",
          "when": "view == sidekiqServers",
          "group": "navigation"
        },
        {
          "command": "sidekiq.refresh",
          "when": "view == sidekiqQueues",
          "group": "navigation"
        },
        {
          "command": "sidekiq.refresh",
          "when": "view == sidekiqWorkers",
          "group": "navigation"
        },
        {
          "command": "sidekiq.refresh",
          "when": "view == sidekiqJobs",
          "group": "navigation"
        },
        {
          "command": "sidekiq.refresh",
          "when": "view == sidekiqCron",
          "group": "navigation"
        },
        {
          "command": "sidekiq.viewMetrics",
          "when": "view == sidekiqServers",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "sidekiq.viewServerDashboard",
          "when": "view == sidekiqServers && viewItem == server",
          "group": "inline"
        },
        {
          "command": "sidekiq.viewMetrics",
          "when": "view == sidekiqServers && viewItem == server",
          "group": "1_server@2"
        },
        {
          "command": "sidekiq.selectServer",
          "when": "view == sidekiqServers && viewItem == server",
          "group": "1_server@1"
        },
        {
          "command": "sidekiq.viewJobDetails",
          "when": "view == sidekiqJobs && viewItem =~ /job-/",
          "group": "inline"
        },
        {
          "command": "sidekiq.retryJob",
          "when": "view == sidekiqJobs && viewItem =~ /job-(retry|dead)/",
          "group": "1_actions@1"
        },
        {
          "command": "sidekiq.deleteJob",
          "when": "view == sidekiqJobs && viewItem =~ /job-/",
          "group": "1_actions@2"
        },
        {
          "command": "sidekiq.clearQueue",
          "when": "view == sidekiqQueues && viewItem == queue",
          "group": "1_actions@1"
        },
        {
          "command": "sidekiq.pauseQueue",
          "when": "view == sidekiqQueues && viewItem == queue",
          "group": "1_actions@2"
        },
        {
          "command": "sidekiq.enqueueCronJob",
          "when": "view == sidekiqCron && viewItem =~ /cronJob-/",
          "group": "1_actions@1"
        },
        {
          "command": "sidekiq.enableCronJob",
          "when": "view == sidekiqCron && viewItem == cronJob-inactive",
          "group": "1_actions@2"
        },
        {
          "command": "sidekiq.disableCronJob",
          "when": "view == sidekiqCron && viewItem == cronJob-active",
          "group": "1_actions@3"
        }
      ]
    }
  },
  "keybindings": [
    {
      "command": "sidekiq.deleteJob",
      "key": "delete",
      "when": "focusedView == sidekiqJobs && viewItem =~ /job-/"
    },
    {
      "command": "sidekiq.retryJob",
      "key": "ctrl+r",
      "mac": "cmd+r",
      "when": "focusedView == sidekiqJobs && viewItem =~ /job-(retry|dead)/"
    },
    {
      "command": "sidekiq.deleteSelectedJobs",
      "key": "shift+delete",
      "when": "focusedView == sidekiqJobs"
    },
    {
      "command": "sidekiq.retrySelectedJobs",
      "key": "ctrl+shift+r",
      "mac": "cmd+shift+r",
      "when": "focusedView == sidekiqJobs"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run esbuild-base",
    "watch": "npm run esbuild-base -- --watch",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antarr/vs-sidekiq.git"
  },
  "author": "Sidekiq Tools",
  "license": "SEE LICENSE IN LICENSE",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/antarr/vs-sidekiq/issues"
  },
  "homepage": "https://github.com/antarr/vs-sidekiq#readme",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "ioredis-mock": "^8.13.1",
    "mocha": "11.3.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "ioredis": "^5.7.0",
    "uuid": "^11.1.0"
  }
}
